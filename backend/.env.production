# Production Environment File Template
# Copy this to .env.production and configure with your production values

# ================================
# DATABASE CONFIGURATION
# ================================
# Production: PostgreSQL (REQUIRED)
DATABASE_URL=postgresql://webgst_user:CHANGE_THIS_PASSWORD@localhost:5432/webgst_db

# ================================
# SECURITY (CRITICAL)
# ================================
# Generate new key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_A_NEW_SECURE_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# APPLICATION
# ================================
APP_NAME=WebGST
APP_ENV=production
DEBUG=False

# ================================
# ADMIN CONFIGURATION
# ================================
# Set to False after creating first admin user
ADMIN_REGISTRATION_ENABLED=False

# ================================
# CORS CONFIGURATION
# ================================
# Add your production domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/webgst/app.log

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_DIR=/var/backups/webgst
BACKUP_RETENTION_DAYS=30

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
